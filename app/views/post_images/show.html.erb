<di class="card-list-container py-5">
  <div class="card w-100 mx-auto mt-4 shadow-lg">
    <%= image_tag @post_image.get_image %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
           <%= image_tag @post_image.user.get_profile_image(50, 50), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <strong><i class="far fa-flag"></i><span> <%= @post_image.shop_name %></span></strong>
          </p>
          <p class="card-text">説明: <%= @post_image.caption %></p>
          <span><i class="fas fa-user"></i> By <%= @post_image.user.name %> | </span>
          <span><%= render 'post_comments/count', post_image: @post_image %></span>
        </div>
      </div>
    </div>
  </div>
</div>
<div>
  <%= render 'post_comments/index', post_image: @post_image, post_comments: @post_comments %>
</div>

<div>
  <%= render 'post_comments/form', post_image: @post_image, post_comment: @post_comment %>
</div>